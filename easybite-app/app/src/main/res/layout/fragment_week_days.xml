<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WeekDaysFragment">

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menú semanal"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/separator"
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:background="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text1"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"/>

    <LinearLayout
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/separator">

        <Button
            android:id="@+id/monday_button"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:text="Lunes"
            android:textSize="17sp"
            android:backgroundTint="#cfd5db"
            android:textColor="#280A2F"
            android:gravity="center"
            android:layout_marginEnd="12dp"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/tuesday_button"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:text="Martes"
            android:textSize="17sp"
            android:backgroundTint="#cfd5db"
            android:textColor="#280A2F"
            android:padding="16dp"
            android:gravity="center"
            android:textAllCaps="false"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/first">

        <Button
            android:id="@+id/wednesday_button"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:text="Miércoles"
            android:textSize="17sp"
            android:backgroundTint="#cfd5db"
            android:textColor="#280A2F"
            android:padding="16dp"
            android:layout_marginEnd="12dp"
            android:gravity="center"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/thursday_button"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:text="Jueves"
            android:textSize="17sp"
            android:backgroundTint="#cfd5db"
            android:textColor="#280A2F"
            android:padding="16dp"
            android:gravity="center"
            android:textAllCaps="false"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/third"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/second">

        <Button
            android:id="@+id/friday_button"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:text="Viernes"
            android:textSize="17sp"
            android:backgroundTint="#cfd5db"
            android:textColor="#280A2F"
            android:padding="16dp"
            android:layout_marginEnd="12dp"
            android:gravity="center"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/saturday_button"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:text="Sábado"
            android:textSize="17sp"
            android:backgroundTint="#cfd5db"
            android:textColor="#280A2F"
            android:padding="16dp"
            android:gravity="center"
            android:textAllCaps="false"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="216dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/third"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/sunday_button"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:text="Domingo"
            android:textSize="17sp"
            android:backgroundTint="#cfd5db"
            android:textColor="#280A2F"
            android:padding="16dp"
            android:gravity="center"
            android:textAllCaps="false"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
